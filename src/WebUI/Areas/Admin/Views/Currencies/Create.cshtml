@model Crypto.Application.Currencies.Commands.AddCurrencyCommand

@{
    ViewBag.Title = "افزودن ارز";
    Layout = "~/Areas/Panel/Views/Shared/_PanelLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div class="form-group">
                        <label for="Title">عنوان</label>
                        <input asp-for="Title" class="form-control text-left">
                        <span class="text text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label for="DisplayUrl">URL</label>
                        <input asp-for="DisplayUrl" class="form-control text-left">
                        <span class="text text-danger" asp-validation-for="DisplayUrl"></span>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" asp-for="CanBePurchased">
                        <label class="form-check-label" for="CanBePurchased">خرید</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" asp-for="CanBeSell">
                        <label class="form-check-label" for="CanBeSell">فروش</label>
                    </div>
                    <button type="submit" class="btn btn-primary">ثبت</button>
                </form>
            </div>
        </div>
    </div>
</div>