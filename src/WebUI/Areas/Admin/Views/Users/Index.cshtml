@model IEnumerable<Crypto.Application.Admin.Users.Queries.UserVm>

@{
    ViewBag.Title = "لیست کاربران";
    Layout = "~/Areas/Panel/Views/Shared/_PanelLayout.cshtml";
}

<!-- DataTable -->
<link rel="stylesheet" href="~/vendors/dataTable/responsive.bootstrap.min.css" type="text/css">

<div class="card">
    <div class="card-body">
        <table id="example1" class="table table-striped table-bordered" width="100%">
            <thead>
            <tr>
                <th>نام</th>
                <th>تلفن همراه</th>
                <th>تلفن ثابت</th>
                <th>کد ملی</th>
                <th>تاریخ تولد</th>
                <th></th>
            </tr>
            </thead>
            <tbody>

            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Tell</td>
                    <td>@user.NationalCode</td>
                    <td>@user.BirthDate</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@user.Id">جزئیات</a>
                    </td>
                </tr>
            }


            </tbody>
        </table>
    </div>
</div>

@section Scripts
{
    <!-- DataTable -->
    <script src="~/vendors/dataTable/jquery.dataTables.min.js"></script>
    <script src="~/vendors/dataTable/dataTables.bootstrap4.min.js"></script>
    <script src="~/vendors/dataTable/dataTables.responsive.min.js"></script>
    <script src="~/assets/js/examples/datatable.js"></script>
}