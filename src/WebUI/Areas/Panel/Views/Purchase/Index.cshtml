@model Crypto.Application.Purchases.Commands.PurchaseCommand

@{
    ViewData["Title"] = "خرید";
    Layout = "~/Areas/Panel/Views/Shared/_PanelLayout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">خرید ارز دیجیتال</h6>
                <form asp-action="Index">
                    <div class="form-group">
                        <label for="amount">مقدار</label>
                        <input type="number" step="0.01" asp-for="Amount" class="form-control text-left" id="amount" dir="ltr">
                        <span class="text text-danger" asp-validation-for="Amount"></span>
                    </div>
                    <div class="form-group">
                        <label for="tomanPrice">معادل تومانی</label>
                        <input type="text" disabled class="form-control text-left" id="tomanPrice" dir="ltr">
                    </div>
                    <div class="form-group">
                        <label for="walletId">آدرس کیف پول</label>
                        <input asp-for="WalletId" class="form-control text-left" id="walletId" dir="ltr">
                        <span class="text text-danger" asp-validation-for="WalletId"></span>
                    </div>
                    <div class="form-group">
                        <label for="description">توضیحات اضافه</label>
                        <textarea asp-for="Description" class="form-control" id="description" rows="3"></textarea>
                        <span class="text text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="d-flex align-items-center m-b-20 mt-3">
                        <h5 class="font-size-13 primary-font">مبلغ قابل پرداخت : </h5>
                        <h3 class="primary-font ml-2">1,608,469 تومان</h3>
                    </div>
                    <button type="submit" class="btn btn-primary">ثبت</button>
                </form>
            </div>
        </div>
    </div>
</div>

