@model WebUI.Models.ConfirmPhoneViewModel

@{
    ViewData["Title"] = "تایید تلفن همراه";
    Layout = "~/Areas/Panel/Views/Shared/_ProfileLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h6 class="card-title">اطلاعات هویتی</h6>
        <form asp-action="ConfirmPhoneNumber">
            <input type="hidden" asp-for="PhoneNumber" value="@ViewData["PhoneNumber"]"/>

            <div class="form-group row">
                <label for="Token" class="col-sm-2 col-form-label">کد</label>
                <div class="col-sm-10">
                    <input asp-for="Token" class="form-control">
                    <span class="text-danger" asp-validation-for="Token"></span>
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col-md-2"></div>
                <div class="col-md-9">
                    <button type="submit" class="btn btn-primary">ثبت کد</button>
                </div>

            </div>
        </form>
    </div>
</div>