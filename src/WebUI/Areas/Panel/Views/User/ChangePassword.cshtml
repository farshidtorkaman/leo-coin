@model WebUI.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Areas/Panel/Views/Shared/_ProfileLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h6 class="card-title">تغییر کلمه عبور</h6>
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group row">
                <label for="OldPassword" class="col-sm-2 col-form-label">کلمه عبور فعلی</label>
                <div class="col-sm-10">
                    <input asp-for="OldPassword" class="form-control">
                    <span class="text text-danger" asp-validation-for="OldPassword"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="NewPassword" class="col-sm-2 col-form-label">کلمه عبور جدید</label>
                <div class="col-sm-10">
                    <input asp-for="NewPassword" class="form-control">
                    <span class="text text-danger" asp-validation-for="NewPassword"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="ConfirmNewPassword" class="col-sm-2 col-form-label">تایید کلمه عبور</label>
                <div class="col-sm-10">
                    <input asp-for="ConfirmNewPassword" class="form-control">
                    <span class="text text-danger" asp-validation-for="ConfirmNewPassword"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2"></div>
                <div class="col-md-10">
                    <button type="submit" class="btn btn-primary">ذخیره تغیرات</button>
                </div>

            </div>
        </form>
    </div>
</div>