@model ResetPasswordViewModel

@{
    ViewBag.Title = "تغییرکلمه عبور";
    Layout = "_IdentityLayout";
}

 <h5>تغییر کلمه عبور</h5>

    <!-- form -->
<form asp-action="ResetPassword">
    <input type="hidden" name="code" value="@ViewData["Code"]" />
    <div class="form-group">
        <input asp-for="Email" class="form-control" placeholder="ایمیل" required autofocus>
    </div>
    <div class="form-group">
        <input asp-for="Password" class="form-control text-left" placeholder="رمز عبور" dir="ltr" required>
    </div>
    <div class="form-group">
        <input asp-for="ConfirmPassword" class="form-control text-left" placeholder="تکرار رمز عبور" dir="ltr" required>
    </div>
    <button class="btn btn-primary btn-block">ثبت</button>
    <hr>
</form>
    <!-- ./ form -->
