@model RegisterViewModel

@{
    Layout = "_IdentityLayout";
}

    <h5>ایجاد حساب</h5>

    <!-- form -->
    <form asp-action="Register">
        <div asp-validation-summary="ModelOnly" style="text-align: center; margin-bottom: 15px" class="text text-danger"></div>
        <div class="form-group row">
            <input asp-for="FirstName" class="form-control" placeholder="نام" autofocus>
            <span asp-validation-for="FirstName" class="text text-danger" style="margin-top: -13px; margin-bottom: 10px"></span>
        </div>
        <div class="form-group row">
            <input asp-for="LastName" class="form-control" placeholder="نام خانوادگی">
            <span asp-validation-for="LastName" class="text text-danger" style="margin-top: -13px; margin-bottom: 10px"></span>
        </div>
        <div class="form-group row">
            <input asp-for="Email" class="form-control text-left" placeholder="ایمیل" dir="ltr">
            <span asp-validation-for="Email" class="text text-danger" style="margin-top: -13px; margin-bottom: 10px"></span>
        </div>
        <div class="form-group row">
            <input asp-for="Password" class="form-control text-left" placeholder="رمز عبور" dir="ltr">
            <span asp-validation-for="Password" class="text text-danger" style="margin-top: -13px; margin-bottom: 10px"></span>
        </div>
        <div class="form-group row">
            <input asp-for="ConfirmPassword" class="form-control text-left" placeholder="تکرار رمز عبور" dir="ltr">
            <span asp-validation-for="ConfirmPassword" class="text text-danger" style="margin-top: -13px; margin-bottom: 10px"></span>
        </div>
        <button class="btn btn-primary btn-block">ثبت نام</button>
        <hr>
        <p class="text-muted">حساب کاربری دارید؟</p>
        <a asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="btn btn-outline-light btn-sm">وارد شوید!</a>
    </form>
    <!-- ./ form -->