@model LoginViewModel

@{
    Layout = "_IdentityLayout";
}

<h5>ورود</h5>

<!-- form -->
<form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
    <div asp-validation-summary="ModelOnly" style="text-align: center; margin-bottom: 15px" class="text text-danger"></div>
    <div class="form-row">
        <input type="email" asp-for="Email" class="form-control text-left" placeholder="ایمیل" dir="ltr" autofocus>
        <span asp-validation-for="Email" class="text text-danger" style="margin-top: -13px; margin-bottom: 10px"></span>
    </div>
    <div class="form-row">
        <input asp-for="Password" class="form-control text-left" placeholder="رمز عبور" dir="ltr" required>
         <span asp-validation-for="Password" class="text text-danger" style="margin-top: -13px; margin-bottom: 10px"></span>
    </div>
    <div class="form-group d-sm-flex justify-content-between text-left mb-4">
        <div class="custom-control custom-checkbox">
            <input asp-for="RememberMe" class="custom-control-input" checked>
            <label class="custom-control-label" for="RememberMe">مرا به خاطر بسپار</label>
        </div>
        <a class="d-block mt-2 mt-sm-0" href="recover-password.html">بازنشانی رمز عبور</a>
    </div>
    <button class="btn btn-primary btn-block">ورود</button>
</form>
<hr>
<p class="text-muted">حسابی ندارید؟</p>
<a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="btn btn-outline-light btn-sm">هم اکنون ثبت نام کنید!</a>

<hr>
<ul class="list-inline">
    <li class="list-inline-item d-block">
        @*<a href="#" class="btn btn-google btn-block">
                <i class="fa fa-google mr-2"></i> ورود با گوگل
            </a>*@
        <form asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
            @foreach (var provider in Model.ExternalLogins)
            {
                <button type="submit" value="@provider.Name" name="provider" class="btn btn-block btn-google">
                    <i class="fa fa-google mr-2"></i> ورود با گوگل
                </button>
            }
        </form>

    </li>
</ul>

<!-- ./ form -->